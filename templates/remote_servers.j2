<?xml version="1.0"?>
<!-- {{ ansible_managed }} -->
<yandex>
  <remote_servers>
{% for shard_name, replicas in clickhouse_shards.items() | list %}
    {% if replicas %}
    <{{ shard_name }}>
      <shard>
        <internal_replication>true</internal_replication>
{% for replica in replicas %}
        <replica>
          <host>{{ replica['host'] }}</host>
          <port>{{ replica['port'] | default(9000) }}</port>
        </replica>
{% endfor %}
      </shard>
    </{{ shard_name }}>
    {% endif %}
{% endfor %}
  </remote_servers>
</yandex>
